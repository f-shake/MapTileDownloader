<UserControl
    x:Class="MapTileDownloader.UI.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:FzLib.Avalonia.Controls;assembly=FzLib.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:map="using:MapTileDownloader.UI.Mapping"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:MapTileDownloader.UI.Views"
    xmlns:vm="using:MapTileDownloader.UI.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="300"
                MinWidth="300" />
            <ColumnDefinition Width="0" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <map:MapView
            x:Name="map"
            Grid.Column="2" />
        <Grid RowDefinitions="Auto,8,*">

            <StackPanel
                Margin="4"
                Spacing="8">
                <HeaderedContentControl
                    Classes="GroupBox"
                    Header="Mbtiles数据库位置">
                    <v:MbtilesPicker />
                </HeaderedContentControl>
                <HeaderedContentControl
                    Classes="GroupBox"
                    Header="感兴趣区域">
                    <v:MapAreaSelector />
                </HeaderedContentControl>
            </StackPanel>
            <TabControl
                x:Name="tab"
                Grid.Row="2"
                Padding="0"
                SelectedIndex="{Binding SelectedTabIndex}"
                TabStripPlacement="Top">
                <TabItem Header="下载">
                    <v:DownloadPanel
                        Margin="0,8"
                        DataContext="{Binding DownloadViewModel}" />
                </TabItem>
                <TabItem Header="本地数据">
                    <v:LocalToolsPanel
                        Margin="0,8"
                        DataContext="{Binding LocalToolsViewModel}" />
                </TabItem>
            </TabControl>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="8"
            Background="Transparent" />
    </Grid>
</UserControl>
